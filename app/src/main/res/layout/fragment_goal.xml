<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Today"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="今日の目標"
            android:textColor="#464647"
            android:textSize="20dp" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChartToday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8" />

        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="0.05"
            android:background="?android:attr/listDivider" />


        <TextView
            android:id="@+id/Week"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="今週の目標"
            android:textColor="#464647"
            android:textSize="20dp" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChartWeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TodayGoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/TodayNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textSize="20dp" />

        <Button
            android:id="@+id/ChangeButton1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            android:minHeight="48dp"
            android:text="変更"
            android:textSize="12dp"
            android:background="@drawable/change_button"
            />

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="0.01"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/WeekGoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/WeekNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textSize="20dp" />

        <Button
            android:id="@+id/ChangeButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            android:minHeight="48dp"
            android:text="変更"
            android:textSize="12dp"
            android:background="@drawable/change_button"
            />

    </LinearLayout>

</LinearLayout>


